          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Save JWT token to environment variable 'jwt' if response contains token field",
              "try {",
              "    const json = pm.response.json();",
              "    if (json.token) {",
              "        // store token without 'Bearer' prefix; use as 'Bearer {{jwt}}' in headers",
              "        pm.environment.set('jwt', json.token);",
              "        console.log('JWT saved to environment variable jwt');",
              "    } else if (json.accessToken) {",
              "        pm.environment.set('jwt', json.accessToken);",
              "        console.log('JWT saved to environment variable jwt (accessToken)');",
              "    } else {",
              "        console.log('Login response has no token field');",
              "    }",
              "} catch (e) {",
              "    console.log('Could not parse login response', e);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
